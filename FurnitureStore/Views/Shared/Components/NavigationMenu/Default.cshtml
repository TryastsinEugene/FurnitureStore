@model IEnumerable<Category>

<a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Product" asp-route-category="">Home</a>
<a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Orders">Orders</a>

<h4>
    Sort by category:
</h4>
@foreach (Category category in Model)
{
    <a class="btn btn-block
                   @(category.Name == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")"
       asp-action="Index" asp-controller="Product"
       asp-route-category="@category.Name" asp-route-productPage="1">
        @category.Name
    </a>
}
